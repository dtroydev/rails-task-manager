<div class="container index">
  <div class="row col-6 mt-3 flex-column">
    <h1>My Tasks</h1>
    <ul class="list-group">
      <% @tasks.each do |task| %>
        <li class="list-group-item">
          <% if task.completed %>
            <i class="far fa-check-square"></i>
          <% else %>
            <i class="far fa-square"></i>
          <% end %>
          <%= link_to task.title, task_path(task) %>
          <%= link_to raw('<i style="color: red" class="far fa-trash-alt"></i>'),
                task_path(task),
                method: :delete,
                data: { confirm: "Are you sure you want to delete '#{task.title}' task?" } %>
        </li>
      <% end %>
    </ul>
    <div class="add">
      <%= link_to raw('<i class="fas fa-plus"></i>Add a new task'), new_task_path %>
    </div>
  </div>
</div>